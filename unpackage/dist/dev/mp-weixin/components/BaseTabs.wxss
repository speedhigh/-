  height: 126rpx;
  white-space: nowrap;
}
.center-cut-menu .scroll-view .scroll-item {
  height: 126rpx;
  padding: 0 20rpx;
  text-align: center;
}
.center-cut-menu .scroll-view .scroll-item .item-text {
  font-size: 30rpx;
  line-height: 40rpx;
}
